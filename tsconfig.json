{
  "compilerOptions": {
    // "target": "ES2018", // Or your desired ES version
    "module": "CommonJS", // Or your desired module system (e.g., "ESNext")
    "moduleResolution": "nodenext",
    "outDir": "./public/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "public/script.ts",
    "src/script.ts" // Add other relevant TypeScript files/folders
  ],
  "exclude": [
    "node_modules"
  ]
}